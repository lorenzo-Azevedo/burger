<div class="container">
    <div class="row">
        <div class="col-m-12 text-center">
            <src="https://cdn.dribbble.com/users/85947/screenshots/1857692/burger.gif">
            <h2>Fresh.Juicy.Thick</h2>
        </div>
        <div class="col-m-12 text-center">
            <div class="row">
                {{#each burger_data}}
                    {{#unless this.eaten}}
                <div class="col-m-6 text-center">
                    <pre>[[this.id}}. {{this.burger}}</pre>
                </div>
                <div class="col-m-6 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                    <input type="hidden" name"burger_id" type="text" value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-default">EAT</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
                </div>
            </div>
            <div class="col-m-6 text-center" class="task">
                {{#each burger_data}}
                    {{#if this.eaten}}
                        <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger}}" readonly>
                    {{/if}}
                {{/each}}
            </div>

        </div>
</div>
    
<div class="container">
    <div class="row">
        <div class="col-m-12 text-center enter_section">
            <form action="/burgers/create" methods="POST">
                <input type="text" name="burger" class="form-control" vlaue="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
            </form>
            <p>Order a burger</p>
        </div>
    </div>
</div>
     